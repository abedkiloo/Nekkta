<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abednego.myapplication"
    android:versionCode="1"
    android:versionName="1.0" > <!-- TODO create a config file -->
    <!-- TODO dashboard launcher with parameters -->
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nekkta_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nekkta_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.abednego.myapplication.activities.Splash"
            android:label="@string/title_activity_fullscreen" >
        </activity>
        <activity android:name="com.example.abednego.myapplication.activities.Interactive" />
        <activity android:name="com.example.abednego.myapplication.activities.RegisterUser" />
        <activity android:name="com.example.abednego.myapplication.activities.SignIn" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.abednego.myapplication.activities.SignUp" />
        <activity
            android:name="com.example.abednego.myapplication.activities.NewBucketActivity"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.example.abednego.myapplication.activities.Feeds"
            android:theme="@style/WhiteTheme" >
        </activity>
        <activity
            android:name="com.example.abednego.myapplication.activities.Dashboard"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/WhiteTheme" >
        </activity>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.0.2" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.example.abednego.myapplication.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>