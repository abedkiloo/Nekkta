<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abednego.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nekkta_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nekkta_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.Splash"
            android:label="@string/title_activity_fullscreen">

        </activity>
        <activity android:name=".activities.Interactive" />
        <activity android:name=".activities.RegisterUser" />
        <activity android:name=".activities.SignIn" />
        <activity android:name=".activities.SignUp" />
        <activity android:name=".activities.NewBucketActivity"
            android:theme="@style/WhiteTheme"/>
        <activity android:name=".activities.Feeds" />
        <activity
            android:theme="@style/WhiteTheme"
            android:name=".activities.Dashboard"
            android:label="@string/title_activity_dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

